# шаблон для inventory скопируйте в папку inventory и отредактируйте файл
# Группа web серверов
[web]
web1 ansible_host=192.168.1.10
web2 ansible_host=192.168.1.11

# Группа db серверов  
[db]
db1 ansible_host=192.168.1.20

# ubuntu сервера
[ubuntu]
ubuntu24-test01 ansible_host=192.168.1.81

# Группа всех серверов
[all:children]
web
db
ubuntu

# Общие переменные для всех хостов
[all:vars]
ansible_port=22
ansible_user=root
ansible_ssh_private_key_file=~/.ssh/id_rsa
ansible_connection=ssh
ansible_ssh_timeout=30
