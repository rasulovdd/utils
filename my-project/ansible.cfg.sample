[defaults]
inventory = inventory/hosts
remote_user = sysadmin
private_key_file = ~/.ssh/id_rsa
host_key_checking = False
interpreter_python = /usr/bin/python3
pipelining = True
log_path = ./ansible.log

[privilege_escalation]
become = True
become_method = sudo
become_user = root
become_ask_pass = False

[ssh_connection]
ssh_args = -o ControlMaster=auto -o ControlPersist=60s -o ConnectTimeout=10 -o ServerAliveInterval=60 -o ServerAliveCountMax=3
